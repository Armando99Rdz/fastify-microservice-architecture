{
  "name": "fastify-microservice-project",
  "version": "1.0.0",
  "description": "Simple Fastify project structure",
  "main": "app.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "tap \"test/**/*.test.js\"",
