    "fastify-autoload": "^3.3.1",
    "fastify-cli": "^2.13.0",
    "fastify-jwt": "^3.0.1",
    "fastify-plugin": "^3.0.0",
    "fastify-sensible": "^3.1.0",
    "fastify-swagger": "^4.9.0",
    "mysql2": "^2.3.0",
    "sequelize": "^6.6.5",
    "uid-generator": "^2.0.0",
    "uuid": "^8.3.2"
  },
